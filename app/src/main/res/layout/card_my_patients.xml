<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_patient_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_patient"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/my_patient_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/my_patient_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:padding="12dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/home_addtest5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_test_lr"
                    android:tint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/home_kesz5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_add_event_lr"
                    android:tint="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>